= render 'action_name', name: "Manage posted messages"

- @message_sets.each do |message_set|
  - message_set.messages.each do |message|
    %div{id: "message_#{message.id}"}
      .row
        .span31
          %p= message.short_text
      .row
        .span31
          %p= message.text
      .row
        .span31
          = link_to(message.url, message.url) if message.url
      .row
        .span10
          = message.social_user.nickname
        .span10
          = message.social_user.provider.humanize
        .span10
          = link_to "Delete", message_path(message), method: :delete, class: "button default"
  %hr
= will_paginate @message_sets
