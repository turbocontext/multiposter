= render 'action_name', name: t('providers.vkontakte.action_names.new')

.row
  .span31
    = link_to "Vkontakte blank.html", VkontakteApi.authorization_url(type: :client, scope: [:wall, :offline]), target: "_blank"
    %blockquote
      %p
        = t('providers.vkontakte.instruction')
.row
  .span31
    = form_for @social_user do |f|
      .input-control.text
        = f.label :auth_string, t('providers.vkontakte.insert_link')
        = f.text_field :auth_string
        = f.hidden_field :provider, value: 'vkontakte'
      = f.submit t('providers.vkontakte.create_user')
